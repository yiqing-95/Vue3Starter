{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*":[
                "src/*"
            ],
            "~/*":[
                "src/*"
            ],
        },
        "target":"ES6",
        "allowSyntheticDefaultImports":true ,
         "types": [
            "vue",
            "webpack-env",
            "jest"
        ],
    },
    "resolveExtensions": [".js", ".vue", ".ts"], 
    "exclude": [
        "node_modules"
        ,"**/node_modules/*" 
        ,"*/node_modules" 
        ,"dist"
        ,"public"
        ,"build"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",

    ]
}